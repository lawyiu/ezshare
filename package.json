{
  "name": "ezshare",
  "version": "1.9.0",
  "description": "Easily share files over LAN",
  "main": "index.js",
  "repository": "https://github.com/mifi/ezshare",
  "author": "Mikael Finstad <finstaden@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "ezshare": "index.js"
  },
  "scripts": {
    "test": "exit 0",
    "build": "cd ezshare-frontend && npm run build",
    "prepublish": "npm run build",
    "start": "concurrently -k \"cd ezshare-frontend && BROWSER=none PORT=3000 npm start\" \"node . --dev-mode\""
  },
  "files": [
    "/ezshare-frontend/build",
    "app.js"
  ],
  "pkg": {
    "assets": [
      "ezshare-frontend/build/**"
    ]
  },
  "dependencies": {
    "archiver": "^3.1.1",
    "body-parser": "^1.19.0",
    "clipboardy": "^2.3.0",
    "content-disposition": "^0.5.3",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "filenamify": "^4.2.0",
    "formidable": "^1.2.2",
    "fs-extra": "^8.1.0",
    "http-proxy-middleware": "^1.0.3",
    "lodash": "^4.17.15",
    "meow": "^6.1.0",
    "morgan": "^1.9.1",
    "p-map": "^4.0.0",
    "qrcode-terminal": "^0.12.0",
    "selfsigned": "^2.0.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0"
  }
